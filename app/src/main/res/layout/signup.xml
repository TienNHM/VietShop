<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_mode"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".layout.SignUp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/txtSignupForm"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgAvt"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:background="@drawable/account"
        android:scaleType="matrix" />

    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="#E64A19"
        android:gravity="center"
        android:text="@string/txtChooseImage"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtFullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="0.2"
        android:background="@drawable/input_field"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/txtFullname"
        android:inputType="textPersonName"
        android:paddingHorizontal="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_weight="0.2"
        android:background="@drawable/input_field"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/txtEmail"
        android:inputType="textPersonName"
        android:paddingHorizontal="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_weight="0.2"
        android:background="@drawable/input_field"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/txtPhone"
        android:inputType="textPersonName"
        android:paddingHorizontal="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_weight="0.2"
        android:background="@drawable/input_field"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/txtUsername"
        android:inputType="textPersonName"
        android:paddingHorizontal="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_weight="0.2"
        android:background="@drawable/input_field"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/txtPassword"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.2"
        android:background="@drawable/input_field"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/txtConfirmPassword"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="#FFA000"
        android:text="@string/btnSignup"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:text="@string/txtHaveAccount"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSignup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:gravity="center_vertical"
            android:linksClickable="true"
            android:padding="10dp"
            android:text="@string/txtSignin"
            android:textColor="#F44336"
            android:textSize="16dp"
            android:textStyle="bold|italic" />
    </LinearLayout>
</LinearLayout>