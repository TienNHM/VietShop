<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hcmute.edu.vn.id18110377"
    android:installLocation="auto">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />

    <uses-permission android:name="ANDROID.PERMISSION.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/plush"
        android:roundIcon="@drawable/plush"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <activity android:name=".layout.SearchResult"></activity>
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".layout.SignUp"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.Discount"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.LogIn"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.SettingsAccount"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.Help"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.ChangeLanguage"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.Cart"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.Wallet"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.BillHistory"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.ShareApp"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.ConnectAccount"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".layout.ProductDetail"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="hcmute.edu.vn.id18110377"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>