<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hcmute.edu.vn.id18110377"
    android:installLocation="auto">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />


    <uses-permission android:name="ANDROID.PERMISSION.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/leaf"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".layout.SignUp"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".layout.Discount"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".layout.Logout"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".layout.SettingsAccount"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".layout.Help"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".layout.ChangeLanguage"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".layout.Cart"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".layout.Wallet"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".layout.BillHistory"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".layout.ShareApp"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".layout.ConnectAccount"
            android:windowSoftInputMode="adjustPan"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>